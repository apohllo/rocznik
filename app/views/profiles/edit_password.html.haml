.scroll-panel-header
  = link_to "Anuluj", profile_path, class: %w{btn btn-default btn-sm pull-right}
  %h3.scroll-panel-title Edycja hasła
.scroll-panel-body
  = simple_form_for @user, url: update_password_profile_path do |f|
    = f.input :current_password, label: "Aktualne hasło"
    = f.input :password, label: "Nowe hasło"
    = f.input :password_confirmation, label: "Powtórz nowe hasło"
    = f.submit "Zapisz", class: %w{btn btn-primary btn-outline}
