.scroll-panel-header
  /= link_to "Artyku≈Çy", articles_path, class: %w{btn btn-default btn-sm pull-right}
  %h3.scroll-panel-title
    = @article.title
.scroll-panel-body
  .row
    .col-md-8
      %dt Streszczenie
      %dd= @article.abstract
    .col-md-4
      %dl
        %dt Autorzy
        %dd= @article.authors_inline
        - if @article.author_email
          %dt Kontakt z autorami
          %dd= link_to @article.author_email, "mailto:#{@article.author_email}"
        %dt Affiliacje
        %dd= @article.affiliations.join(", ")
        %dt Numer
        %dd= link_to @article.issue_title, public_issue_path(@article.issue)
        %dt Strony
        %dd= @article.article_pages
        %dt DOI
        %dd
          - if @article.DOI
            = link_to @article.DOI, "http://dx.doi.org/"+@article.DOI
          - else
            [Brak numeru DOI]
  .row
    %dl
    .col-md-8
      %dt Slowa kluczowe
      %dd= @article.keywords
  .row
    .col-xs-6.col-md-4
    .col-md-3
      - if @article.link
        = link_to "Pobierz PDF", @article.link, class: %w{btn btn-primary}
