.scroll-panel-header
  - redirect_object = @public_review.article_revision ? @public_review.submission : @public_review.person
  = link_to "Anuluj", redirect_object, class: %w{btn btn-default btn-sm pull-right}
  %h3.scroll-panel-title
    Utwórz recenzję
.scroll-panel-body
  = simple_form_for @public_review, url: public_reviews_path do |f|
    - if @public_review.article_revision
      = hidden_field_tag :article_revision_id, @public_review.article_revision.id
    - if @public_review.person
      = hidden_field_tag :person_id, @public_review.person.id
    = render partial: "new_fields", locals: {f: f}
    = f.submit "Dodaj", class: %w{btn btn-primary btn-outline}
