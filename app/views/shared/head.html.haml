  %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
  %meta{"http-equiv" => "X-UA-Compatible", "content" => "IE=edge"}
  %meta{:charset => "utf-8"}/
  %meta{"name" => "viewport", "content" => "width=device-width, initial-scale=1"}
  %meta{:content => "Aleksander Smywiński-Pohl, Marta Siedlecka, Adrianna Smurzyńska", :name => "author"}/
  %meta{:content => "Rocznik Kognitywistyczny -- czasopismo naukowe, 5 punktów MNiSW", :name => "description"}/
