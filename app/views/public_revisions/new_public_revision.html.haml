=simple_form_for @revision do |f| 
  - if @submission_id 
    = hidden_field_tag :submission_id, @submission_id 
  = f.input :status, collection: Submission::STATUS_MAPPING.
  = f.input :file, label „File”, hint "Plik z nową wersją"
  = f.input :pages, label „Number of pages”, hint „Ilość stron”
  = f.input :pictures, label „Number of pictures”, hint „Ilość obrazków”
  = f.input :received, label: "Otrzymano", class: %w{datepicker form-control}, as: :string, input_html: { value: l(f.object.received, format: "%d-%m-%Y"), type:"date" } 
  - label = @revision.new_record? ? "Utwórz" : "Zapisz" 
  = f.submit label, class: %w{btn btn-primary btn-outline}
